<div class="row">
  <div class="col-xs-12">
    <div class="col-sm-6 offset-sm-2">
      <div class="col-auto flex-lg-3 offset-lg-3 ">    
        <%= form_for(task) do |f| %>
          <% if task.errors.any? %>
            <div class="alert alert-warning">
              <ul>
                <% task.errors.full_messages.each do |task| %>
                 <li><%= task %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.label :status, 'ステータスカラム' %>
            <%= f.text_field :status, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :content, 'タスク' %>
            <%= f.text_field :content, class: 'form-control' %>
          </div>
  
          <%= f.submit '投稿', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>